/* 评论 */
.comment-view {
    position: fixed;
    top: 98rpx;
    right: 0;
    bottom: 0;
    left: 0;
    border-top-left-radius: 16rpx;
    border-top-right-radius: 16rpx;
    background: #fff;
    transform: translateY(100%)
}

.comment-view:before {
    content: '';
    display: block;
    margin: 16rpx auto 0;
    width: 64rpx;
    height: 8rpx;
    border-radius: 8rpx;
    background: rgba(0, 0, 0, 0.3);
}

.comment-tag {
    padding: 0 44rpx;
    border-bottom: 2rpx solid #EEEEEE;    
}

.comment-tag view{
    font-size: 32rpx;
    color: #000000;
    display: inline-block;
    margin-right: 58rpx;
    line-height: 44rpx;
    padding: 26rpx 0;
    position: relative;
}

.comment-tag view.active:before {
    content: '';
    width: 64rpx;
    height: 6rpx;
    display: inline-block;
    background: #ed6c00;
    position: absolute;
    bottom: 0;
}

.comment-tag view text {
    font-size: 28rpx;
    color: #999999;
    padding: 0 8rpx;
}

.comment-item {
    display:flex;
    align-items:top;
    padding:40rpx 0 0 40rpx;
}

.comment-face {
    width: 64rpx;
    height: 64rpx;
    border-radius: 64rpx;
    flex-shrink:0;
    float:left;
    margin-right: 16rpx;
}

.comment {
    flex-grow:1;
    justify-content:space-between;
    box-sizing:border-box;
    align-items: center;
    float:left;
    padding-bottom:40rpx;
    border-bottom: 1px solid #EEEEEE;
}

.comment-user {
    font-size: 30rpx;
    color: #000000;
    font-weight: 600;
    line-height: 42rpx;
    margin-bottom: 16rpx;
}

.like  {
    flex-grow:1;
    justify-content:space-between;
    box-sizing:border-box;
    align-items: center;
    float:left;
    padding-bottom:40rpx;
    padding-top: 10rpx;
    border-bottom: 1px solid #EEEEEE;
}

.like .comment-user {
    margin: 0;
}

.comment-user text {
    font-size: 26rpx;
    color: #999999;
    line-height: 42rpx;
    padding-left: 12rpx;
}

.comment-content {
    font-size: 30rpx;
    color: #000000;
    line-height: 42rpx;
}

.sub-comment {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 112rpx;
    border-top: 1px solid #C4C4C4;
    padding: 24rpx;
    box-sizing: border-box;
}

.sub-comment.iphoneX {
    bottom: 80rpx;
}

.sub-comment view {
    width: 574rpx;
    height: 64rpx;
    background: #F1F1F1;
    border-radius: 64rpx;
    display: inline-block;
    box-sizing: border-box;
    padding: 0 32rpx;
    vertical-align: top;
}

.sub-comment input {
    line-height: 64rpx;
    height: 64rpx;
    font-size: 28rpx;
}

.sub-comment button {
    display: inline-block;
    border: 0;
    width: 96rpx;
    height: 64rpx;
    line-height: 64rpx;
    padding: 0;
    text-align: right;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #ED6C00;
    border: 0;
    background: #fff;
}

.sub-comment button::after{ border: none; }